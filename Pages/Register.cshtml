@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1 class="display-4">Register</h1>
</div>

<form method="post">
    <div class="form-group">
        <label for="Username">Username:</label>
        <input type="text" class="form-control" placeholder="Username" id="Username" name="Username" value="@Model.Username" required />
    </div>
    <div class="form-group">
        <div>
            <label for="Password">Password:</label>
            <input type="password" class="form-control" placeholder="Password" id="Password" name="Password" required />
        </div>

        <div>
            <label for="ConfirmPassword">Confirm Password:</label>
            <input type="password" class="form-control" placeholder="Confirm Password" id="ConfirmPassword" name="ConfirmPassword" required />
        </div>

        <small id="passwordHelp" class="form-text text-muted">We'll never share your password with anyone else.</small>
    </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
    <p style="color:red; font-size: 10px">@Model.ErrorMessage</p>
    }

    <button type="submit" class="btn btn-primary btn-sm">Register</button>
    <button type="button" class="btn btn-secondary btn-sm" onclick="window.location.href='/Index';">Login</button>
</form>
