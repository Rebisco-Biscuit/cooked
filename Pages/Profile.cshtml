@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="profile-container">
    <h1><a href="/MainPage">Back</a> | Profile </h1>

    @if (Model.gprof != null)
    {
        <div class="profile-info" style="display: inline-flex; margin-top: 50px;">
            <img src="@Model.gprof.ProfilePicUrl" alt="Profile Picture" class="profile-pic" width="200" height="200" style="border-radius: 10%;">
            <div class="force-inline" style="margin-left: 20px;">
                <h2 style="display: table-caption;">@Model.gprof.Username</h2>
                <p style="display: table-cell;">Joined: @Model.gprof.CreatedAt.ToString("MM/dd/yyyy")</p>
            </div>
        </div>
    }
    else
    {
        <p>No profile found.</p>
    }

    <form method="post" asp-page-handler="SaveProfile" enctype="multipart/form-data" asp-route-userId = "@Model.UserId">
        <div class="form-group">
            <label for="petInfo">Pet Information:</label>
            <textarea id="petInfo" name="petInfo" class="form-control">@Model.gprof?.PetInfo</textarea>
        </div>

        <div class="form-group">
            <label for="ProfilePicUrl">Change Profile Picture:</label>
            <input type="file" name="ProfilePicUrl" class="form-control" id="ProfilePicUrl"  accept="image/*">
        </div>

        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Save Changes</button>
    </form>
</div>


